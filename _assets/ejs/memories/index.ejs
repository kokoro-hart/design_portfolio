<% let pageId='memories' ; %>
<%- include('../common/_header', {pageId:pageId }) %>

<% console.log(jsonData) %>
<main class="l-single-works p-single-works p-single-works--memories" data-barba="container" data-barba-namespace="memories">
  <%# 背景色変更エリア %>
  <div class="p-single-works--memories__container">
    <div class="l-container">

      <%# ファーストビュー %>
      <div id="js-first-view" class="l-single-works__first-view">
        <div class="p-single-works__heading c-single-heading">
          <h1 class="p-single-works__heading-en is-wrap" style="transform: translate(0px, 0px);">
            <span class="is-slide-up">
              Memories
            </span>
          </h1>
          <p class="p-single-works__heading-ja is-fade-up u-delay01">
            架空カーイベント特設サイト
          </p>
          <p class="p-single-works__category is-fade-up u-delay02">
            Event Site / Coding
          </p>
        </div>
      </div><%# / ファーストビュー %>

      <%# モックアップ %>
      <div class="p-single-works__mockups" style="transform: translate(0px, 0px);">
        <picture class="p-single-works__mockup p-single-works__mockup--sp" data-scroll data-scroll-speed="1" data-scroll-delay="0.1">
          <source srcset="/img/webp/sp-memories.webp" class="p-single-works__mockup-img" type="image/webp"/>
          <img src="/img/common/sp-memories.png" class="p-single-works__mockup-img" alt="Memories架空カーイベントサイト、スマホ画面のビュー" width="269" height="542" decoding="async">
        </picture>

        <picture class="p-single-works__mockup p-single-works__mockup--pc">
          <source srcset="/img/webp/pc-memories.webp" class="p-single-works__mockup-img" type="image/webp" data-scroll data-scroll-speed="0.5"/>
          <img src="/img/common/pc-memories.png" class="p-single-works__mockup-img" alt="Memories架空カーイベントサイト、PC画面のビュー" width="949" height="811" decoding="async">
        </picture>

        <picture class="p-single-works__mockup p-single-works__mockup--tab" data-scroll data-scroll-speed="0.75" data-scroll-delay="0.05">
          <source srcset="/img/webp/tab-memories.webp" class="p-single-works__mockup-img" type="image/webp"/>
          <img src="/img/common/tab-memories.png" class="p-single-works__mockup-img" alt="Memories架空カーイベントサイト、タブレット画面のビュー" width="443" height="620" decoding="async">
        </picture>
      </div><%# / モックアップ %>

      <%# サイトリンク 概要 %>
      <div class="p-single-works__info" style="transform: translate(0px, 0px);">
        <section class="p-single-works__overview p-works-overview">
          <h2 class="p-works-overview__heading">
            LINKS
          </h2>
          <div class="p-works-overview__body">
            <dl class="p-works-overview__dl">
              <div class="p-works-overview__row">
                <dt class="p-works-overview__dt">
                  Site url
                </dt>
                <dd class="p-works-overview__dd">
                  <a href="https://pf-memories.site/" class="p-works-overview__link" target="_blank" rel="noopener noreferrer" style="transform: translate(0px, 0px);">
                    https://pf-memories.com
                    <svg class="c-svg p-works-overview__blank" width="14" height="14">
                      <use xlink:href="/img/svg/sprite.min.svg#icon-blank" />
                    </svg>
                  </a>
                </dd>
              </div>
              <div class="p-works-overview__row">
                <dt class="p-works-overview__dt">
                  Source
                  <svg class="c-svg p-works-overview__svg" width="20" height="20" role="img" aria-label="GitHubのアイコン">
                    <use xlink:href="/img/svg/sprite.min.svg#icon-github" />
                  </svg>
                </dt>
                <dd class="p-works-overview__dd">
                  <a href="https://github.com/kokoro-hart/car_events" class="p-works-overview__link" target="_blank" rel="noopener noreferrer" style="transform: translate(0px, 0px);">
                    https://github.com/kokoro-hart
                    <svg class="c-svg p-works-overview__blank" width="14" height="14">
                      <use xlink:href="/img/svg/sprite.min.svg#icon-blank" />
                    </svg>
                  </a>
                </dd>
              </div>
              <div class="p-works-overview__row">
                <dt class="p-works-overview__dt">
                  Basic認証
                </dt>
                <dd class="p-works-overview__dd">
                  ID : pf-memories <br>
                  Pass : pf-memories@01
                </dd>
              </div>
            </dl>
          </div>
        </section>
        <section class="p-single-works__overview p-works-overview">
          <h2 class="p-works-overview__heading">
            OVERVIEW
          </h2>
          <div class="p-works-overview__body">
            <p class="p-works-overview__text">
              クラシックカーの総合展示会をコンセプトにした架空カーイベントサイトのコーディングを行いました。
            </p>
          </div>
        </section>
      </div><%# / サイトリンク 概要 %>

      <%# ワイドイメージ %>
      <picture class="p-single-works__picture p-single-works__picture--wide" style="transform: translate(0px, 0px);">
        <img src="/img/common/car.jpeg" class="p-single-works__img" width="1920" height="1251" loading="lazy" data-scroll data-scroll-speed="-1" alt="車の内装">
      </picture><%# / ワイドイメージ %>

      <%# アニメーション %>
      <div class="p-single-works__info" style="transform: translate(0px, 0px);">
        <section class="p-single-works__overview p-works-overview">
          <h2 class="p-works-overview__heading">
            ANIMATION
          </h2>
          <div class="p-works-overview__body">
            <p class="p-works-overview__text">
              アニメーションの実装は、ベンチマークとして添付していただいたサイトを参考にしたものを2つ、自分なりにアレンジしたものを1つ、計3つほどプロトタイプを作成してデザイナーの方に確認しながら実装しました。
            </p>
          </div>
        </section>
      </div><%# / アニメーション %>

      <%# 動画 %>
      <div class="p-single-works__video-wrapper">
        <video autoplay muted loop playsinline width="1632" height="1020" data-scroll data-scroll-speed="-1">
          <source src="/img/video/memories.mp4" type="video/mp4">
        </video>
      </div><%# / 動画 %>
    </div>
  </div><%# / 背景色変更エリア %>

  <%# 詳細 %>
  <div class="l-single-works__detail l-container">
    <section class="p-single-works__detail p-works-detail" data-scroll data-scroll-sticky data-scroll-target="#js-capture">
      <div class="p-works-detail__inner">
        <h2 class="p-works-detail__heading" style="transform: translate(0px, 0px);">
          DETAILS
        </h2>
        <div class="p-works-detail__body">
          <dl class="p-works-detail__dl">
            <div class="p-works-detail__row">
              <dt class="p-works-detail__dt">
                担当範囲
              </dt>
              <dd class="p-works-detail__dd">
                コーディング（TOPのみ）
              </dd>
            </div>
            <div class="p-works-detail__row">
              <dt class="p-works-detail__dt">
                制作期間
              </dt>
              <dd class="p-works-detail__dd">
                2022.5.28 - 2022.6.14
              </dd>
            </div>
            <div class="p-works-detail__row">
              <dt class="p-works-detail__dt">
                実働時間
              </dt>
              <dd class="p-works-detail__dd">
                9日 (1〜2時間 / 1日)
              </dd>
            </div>
            <div class="p-works-detail__row">
              <dt class="p-works-detail__dt">
                使用技術
              </dt>
              <dd class="p-works-detail__dd">
                HTML(Pug) / CSS(Scss) / JavaScript
              </dd>
            </div>
            <div class="p-works-detail__row">
              <dt class="p-works-detail__dt">
                使用ツール
              </dt>
              <dd class="p-works-detail__dd">
                git / webpack / vscode / XD
              </dd>
            </div>
            <div class="p-works-detail__row">
              <dt class="p-works-detail__dt">
                ライブラリ
              </dt>
              <dd class="p-works-detail__dd">
                Swiper.js
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </section>

    <div class="p-single-works__captures">
      <picture class="p-single-works__capture" style="transform: translate(0px, 0px);">
        <source srcset="/img/webp/car-top.webp" class="p-single-works__capture-img" type="image/webp" />
        <img src="/img/common/car-top.png" class="p-single-works__capture-img" alt="Memories架空カーイベントサイトのフルスクリーンキャプチャ" width="816" height="2745" loading="lazy">
      </picture>
      <div class="p-single-works__capture-mask" id="js-capture"></div>
    </div>
  </div><%# / 詳細 %>

  <%# 制作実績導線 %>
  <div class="p-works-connect" style="transform: translate(0px, 0px);">
    <a href="/brain-app/" class="p-works-connect__link">
      <picture class="p-works-connect__bg">
        <source srcset="/img/webp/thumbnail-brain.webp" type="image/webp" />
        <img src="/img/common/thumbnail-brain.png" width="770" height="781" alt="サムネイル、Brain App架空医療系アプリLP" loading="lazy">
      </picture>
      <p class="p-works-connect__text-wrapper">
        <span class="p-works-connect__text" data-text="Brain App">
          Prev
        </span>
      </p>
    </a>
    <a href="/kt-media/" class="p-works-connect__link">
      <picture class="p-works-connect__bg">
        <source srcset="/img/webp/thumbnail-media.webp" type="image/webp" />
        <img src="/img/common/thumbnail-media.png" width="770" height="781" alt="サムネイル、KT MEDIA個人技術ブログ" loading="lazy">
      </picture>
      <p class="p-works-connect__text-wrapper">
        <span class="p-works-connect__text" data-text="KT MEDIA">
          Next
        </span>
      </p>
    </a>
  </div><%# / 制作実績導線 %>
</main>

<%- include('../common/_footer', {pageId:pageId }) %>