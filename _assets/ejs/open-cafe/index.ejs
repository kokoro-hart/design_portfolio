<% let pageId='open-cafe' ; %>

<%- include('../common/_header', {pageId:pageId }) %>

<% console.log(jsonData) %>
<main id="js-open-cafe" class="l-single-works p-single-works" data-barba="container" data-barba-namespace="single" data-bg="#AE9687">
  <div class="l-container">
    <%# 背景色変更エリア %>
    <div id="js-switching-trigger">
      <%# ファーストビュー %>
      <div id="js-first-view" class="l-single-works__first-view">
        <div class="p-single-works__heading c-single-heading">
          <h1 class="p-single-works__heading-en is-wrap" style="transform: translate(0px, 0px);">
            <span class="is-slide-up">
              Open Cafe
            </span>
          </h1>
          <p class="p-single-works__heading-ja is-fade-up u-delay01">
            架空カフェサイト
          </p>
          <p class="p-single-works__category is-fade-up u-delay02">
            Cafe Site / Coding
          </p>
        </div>
      </div><%# / ファーストビュー %>

      <%# モックアップ %>
      <div class="p-single-works__mockups" style="transform: translate(0px, 0px);">
        <picture class="p-single-works__mockup p-single-works__mockup--sp" data-scroll data-scroll-speed="1" data-scroll-delay="0.1">
          <source srcset="/img/webp/sp-open.webp" class="p-single-works__mockup-img" type="image/webp" />
          <img src="/img/common/sp-open.png" class="p-single-works__mockup-img" alt="Open Cafe架空カフェサイト、スマホ画面のビュー" width="70" height="141" decoding="async">
        </picture>

        <picture class="p-single-works__mockup p-single-works__mockup--pc" data-scroll data-scroll-speed="0.5">
          <source srcset="/img/webp/pc-open.webp" class="p-single-works__mockup-img" type="image/webp" />
          <img src="/img/common/pc-open.png" class="p-single-works__mockup-img" alt="Open Cafe架空カフェサイト、PC画面のビュー" width="949" height="811" decoding="async">
        </picture>

        <picture class="p-single-works__mockup p-single-works__mockup--tab" data-scroll data-scroll-speed="0.75" data-scroll-delay="0.05">
          <source srcset="/img/webp/tab-open.webp" class="p-single-works__mockup-img" type="image/webp" />
          <img src="/img/common/tab-open.png" class="p-single-works__mockup-img" alt="Open Cafe架空カフェサイト、タブレット画面のビュー" width="445" height="622" decoding="async">
        </picture>
      </div><%# / モックアップ %>

      <%# サイトリンク 概要 %>
      <div class="p-single-works__info" style="transform: translate(0px, 0px);">
        <section class="p-single-works__overview p-works-overview">
          <h2 class="p-works-overview__heading">
            LINKS
          </h2>
          <div class="p-works-overview__body">
            <dl class="p-works-overview__dl">
              <div class="p-works-overview__row">
                <dt class="p-works-overview__dt">
                  Site url
                </dt>
                <dd class="p-works-overview__dd">
                  <a href="https://pf-opencafe.com/" class="p-works-overview__link" target="_blank" rel="noopener noreferrer"
                    style="transform: translate(0px, 0px);">
                    https://pf-opencafe.com/
                    <svg class="c-svg p-works-overview__blank" width="14" height="14">
                      <use xlink:href="/img/svg/sprite.min.svg#icon-blank" />
                    </svg>
                  </a>
                </dd>
              </div>
              <div class="p-works-overview__row">
                <dt class="p-works-overview__dt">
                  Source
                  <svg class="c-svg p-works-overview__svg" width="20" height="20" role="img" aria-label="GitHubのアイコン">
                    <use xlink:href="/img/svg/sprite.min.svg#icon-github" />
                  </svg>
                </dt>
                <dd class="p-works-overview__dd">
                  <a href="https://github.com/kokoro-hart/open_cafe" class="p-works-overview__link"
                    target="_blank" rel="noopener noreferrer" style="transform: translate(0px, 0px);">
                    https://github.com/kokoro-hart
                    <svg class="c-svg p-works-overview__blank" width="14" height="14">
                      <use xlink:href="/img/svg/sprite.min.svg#icon-blank" />
                    </svg>
                  </a>
                </dd>
              </div>
              <div class="p-works-overview__row">
                <dt class="p-works-overview__dt">
                  Basic認証
                </dt>
                <dd class="p-works-overview__dd">
                  ID : pf-open <br>
                  Pass : pf-open@01
                </dd>
              </div>
            </dl>
          </div>
        </section>
        <section class="p-single-works__overview p-works-overview">
          <h2 class="p-works-overview__heading">
            OVERVIEW
          </h2>
          <div class="p-works-overview__body">
            <p class="p-works-overview__text">
              「Open Cafe」架空カフェサイトのコーディング、CMS構築を行いました。
            </p>
          </div>
        </section>
      </div><%# / サイトリンク 概要 %>

      <%# ワイドイメージ %>
      <picture class="p-single-works__picture p-single-works__picture--wide" style="transform: translate(0px, 0px);">
        <source srcset="/img/webp/open-rotate.webp" class="p-single-works__img" type="image/webp" />
        <img src="/img/common/open-rotate.png" class="p-single-works__img" width="1920" height="1332" loading="lazy" data-scroll data-scroll-speed="-1" alt="">
      </picture><%# / ワイドイメージ %>

      <%# フューチャー %>
      <div class="p-single-works__info" style="transform: translate(0px, 0px);">
        <section class="p-single-works__overview p-works-overview">
          <h2 class="p-works-overview__heading">
            FEATURE
          </h2>
          <div class="p-works-overview__body">
            <p class="p-works-overview__text">
              WordPress自作テーマにてメニューやお知らせ、ギフトの管理をしています。<br>
            </p>
          </div>
        </section>
      </div><%# / フューチャー %>

      <%# 動画 %>
      <div class="p-single-works__video-wrapper">
        <video autoplay muted loop playsinline width="1632" height="1020" data-scroll data-scroll-speed="-1">
          <source src="/img/video/open-video.mp4" type="video/mp4">
        </video>
      </div><%# / 動画 %>

    </div><%# / 背景色変更エリア %>

    <%# 詳細 %>
    <div class="l-single-works__detail">
      <section class="p-single-works__detail p-works-detail" data-scroll data-scroll-sticky data-scroll-target="#js-capture">
        <div class="p-works-detail__inner">
          <h2 class="p-works-detail__heading" style="transform: translate(0px, 0px);">
            DETAILS
          </h2>
          <div class="p-works-detail__body">
            <dl class="p-works-detail__dl">
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  担当範囲
                </dt>
                <dd class="p-works-detail__dd">
                  コーディング（12P） / CMS構築
                </dd>
              </div>
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  制作期間
                </dt>
                <dd class="p-works-detail__dd">
                  2021.11.9 - 2021.12.19
                </dd>
              </div>
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  実働時間
                </dt>
                <dd class="p-works-detail__dd">
                  26日(2〜4時間/ 1日)
                </dd>
              </div>
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  使用言語
                </dt>
                <dd class="p-works-detail__dd">
                  HTML(EJS) / CSS(Scss) / JavaScript / PHP
                </dd>
              </div>
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  使用ツール
                </dt>
                <dd class="p-works-detail__dd">
                  git / gulp + webpack / vscode / XD
                </dd>
              </div>
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  ライブラリ
                </dt>
                <dd class="p-works-detail__dd">
                  swiper.js
                </dd>
              </div>
              <div class="p-works-detail__row">
                <dt class="p-works-detail__dt">
                  使用CMS
                </dt>
                <dd class="p-works-detail__dd">
                  WordPress
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </section>
      <div class="p-single-works__captures">
        <picture class="p-single-works__capture" style="transform: translate(0px, 0px);">
          <source srcset="/img/webp/open-top.webp" class="p-single-works__capture-img" type="image/webp" />
          <img src="/img/common/open-top.png" class="p-single-works__capture-img" alt="Open Cafe架空カフェサイトのトップページフルスクリーンキャプチャ" width="816" height="3580" loading="lazy">
        </picture>
        <picture class="p-single-works__capture" style="transform: translate(0px, 0px);">
          <source srcset="/img/webp/open-concept.webp" class="p-single-works__capture-img" type="image/webp" />
          <img src="/img/common/open-concept.png" class="p-single-works__capture-img" alt="Open Cafe架空カフェサイトのコンセプトページフルスクリーンキャプチャ" width="816" height="950" loading="lazy">
        </picture>
        <picture class="p-single-works__capture" style="transform: translate(0px, 0px);">
          <source srcset="/img/webp/open-menu.webp" class="p-single-works__capture-img" type="image/webp" />
          <img src="/img/common/open-menu.png" class="p-single-works__capture-img" alt="Open Cafe架空カフェサイトのメニューページフルスクリーンキャプチャ" width="816" height="781" loading="lazy">
        </picture>
        <picture class="p-single-works__capture" style="transform: translate(0px, 0px);">
          <source srcset="/img/webp/open-gift.webp" class="p-single-works__capture-img" type="image/webp" />
          <img src="/img/common/open-gift.png" class="p-single-works__capture-img" alt="Open Cafe架空カフェサイトのギフトページフルスクリーンキャプチャ" width="816" height="752" loading="lazy">
        </picture>
        <div class="p-single-works__capture-mask" id="js-capture"></div>
      </div>
    </div><%# / 詳細 %>
  </div>

  <%# 制作実績導線 %>
  <div class="p-works-connect" style="transform: translate(0px, 0px);">
    <a href="/kt-media/" class="p-works-connect__link">
      <picture class="p-works-connect__bg">
        <source srcset="/img/webp/thumbnail-media.webp" type="image/webp" />
