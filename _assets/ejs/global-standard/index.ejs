      <main id="js-switching-bg" class="l-single-works p-single-works p-single-works--global">
        <div class="l-container">
          <div id="js-switching-trigger">
            <!--ファーストビュー-->
            <div id="js-first-view" class="l-single-works__first-view">
              <div class="p-single-works__heading c-single-heading">
                <h1 class="p-single-works__heading-en is-wrap" style="transform: translate(0px, 0px);">
                  <span class="is-slide-up">
                    Global Standard
                  </span>
                </h1>
                <p class="p-single-works__heading-ja is-fade-up">
                  グローバルスタンダード
                </p>
                <p class="p-single-works__category is-fade-up">
                  Corporate Site / Coding
                </p>
              </div>
            </div>
            <!--/ファーストビュー-->

            <!--モックアップ-->
            <figure class="l-single-works__figure p-single-works__figure">
              <picture class="p-single-works__picture p-single-works__picture--sp" data-scroll data-scroll-speed="1" data-scroll-delay="0.1">
                <source srcset="/img/webp/sp-global.webp" class="p-single-works__img" type="image/webp" />
                <img src="/img/common/sp-global.png" class="p-single-works__img" alt="Global Standard spモックアップ" style="transform: translate(0px, 0px);">
              </picture>

              <picture class="p-single-works__picture p-single-works__picture--pc" data-scroll data-scroll-speed="0.5">
                <source srcset="/img/webp/pc-global.webp" class="p-single-works__img" type="image/webp" />
                <img src="/img/common/pc-global.png" class="p-single-works__img" alt="Global Standard pcモックアップ" style="transform: translate(0px, 0px);">
              </picture>

              <picture class="p-single-works__picture p-single-works__picture--tab" data-scroll data-scroll-speed="0.75" data-scroll-delay="0.05">
                <source srcset="/img/webp/tab-global.webp" class="p-single-works__img" type="image/webp" />
                <img src="/img/common/tab-global.png" class="p-single-works__img" alt="Global Standard tabモックアップ" style="transform: translate(0px, 0px);">
              </picture>
            </figure>
            <!--モックアップ-->
          </div>
        </div>

        <div class="l-container l-container--small">
          <div class="l-single-works__contents">
            <!--概要-->
            <div class="p-single-works__info" style="transform: translate(0px, 0px);">
              <section class="p-single-works__overview p-works-overview">
                <h2 class="p-works-overview__heading is-wrap js-trigger">
                  <span class="is-slide-up">
                    LINKS
                  </span>
                </h2>
                <div class="p-works-overview__body">
                  <dl class="p-works-overview__dl">
                    <div class="p-works-overview__row">
                      <dt class="p-works-overview__dt">
                        Site url
                      </dt>
                      <dd class="p-works-overview__dd">
                        <a href="" class="p-works-overview__link" target="_blank" rel="noopener noreferrer"
                          style="transform: translate(0px, 0px);">
                          https://global-standard.com/
                          <svg class="c-svg p-works-overview__blank" width="14" height="14">
                            <use xlink:href="/img/svg/sprite.min.svg#icon-blank" />
                          </svg>
                        </a>
                      </dd>
                    </div>
                    <div class="p-works-overview__row">
                      <dt class="p-works-overview__dt">
                        Source
                        <svg class="c-svg p-works-overview__svg" width="20" height="20" role="img"
                          aria-label="GitHubのアイコン">
                          <use xlink:href="/img/svg/sprite.min.svg#icon-github" />
                        </svg>
                      </dt>
                      <dd class="p-works-overview__dd">
                        <a href="https://github.com/kokoro-hart/global_standard" class="p-works-overview__link"
                          target="_blank" rel="noopener noreferrer" style="transform: translate(0px, 0px);">
                          https://github.com/kokoro-hart
                          <svg class="c-svg p-works-overview__blank" width="14" height="14">
                            <use xlink:href="/img/svg/sprite.min.svg#icon-blank" />
                          </svg>
                        </a>
                      </dd>
                    </div>
                    <div class="p-works-overview__row">
                      <dt class="p-works-overview__dt">
                        Basic認証
                      </dt>
                      <dd class="p-works-overview__dd">
                        ID : global <br>
                        Pass : global
                      </dd>
                    </div>
                  </dl>
                </div>
              </section>
              <section class="p-single-works__overview p-works-overview">
                <h2 class="p-works-overview__heading is-wrap js-trigger">
                  <span class="is-slide-up">
                    OVERVIEW
                  </span>
                </h2>
                <div class="p-works-overview__body">
                  <p class="p-works-overview__text">
                    世界で活躍できるグローバルな人材を育てる、架空事業会社コーポレートサイトのコーディング、WordPress化を行いました。
                  </p>
                </div>
              </section>
            </div>
            <!--/概要-->

            <!--斜めのモックアップ-->
            <picture class="p-single-works__rotate-picture" style="transform: translate(0px, 0px);">
              <source srcset="/img/webp/global-rotate.webp" class="p-single-works__rotate-img" type="image/webp" />
              <img src="/img/common/global-rotate.jpeg" class="p-single-works__rotate-img" width="1920" height="1333.33" loading="lazy" decoding="async" data-scroll data-scroll-speed="-1" alt="斜めのモックアップ画像">
            </picture>
            <picture class="p-single-works__rotate-picture" style="transform: translate(0px, 0px);">
              <source srcset="/img/webp/global-rotate.webp" class="p-single-works__rotate-img" type="image/webp" />
              <img src="/img/common/global-rotate.jpeg" class="p-single-works__rotate-img" width="1920" height="1333.33" loading="lazy" decoding="async" data-scroll data-scroll-speed="-1" alt="斜めのモックアップ画像">
            </picture>
            <!--/斜めのモックアップ-->

            <!--詳細-->
            <section class="p-single-works__detail p-works-detail" data-scroll data-scroll-sticky
              data-scroll-target="#js-capture">
              <div class="p-works-detail__inner">
                <h2 class="js-trigger" style="transform: translate(0px, 0px);">
                  <span class="p-works-detail__heading">
                    ROLE
                  </span>
                </h2>
                <div class="p-works-detail__body">
                  <dl class="p-works-detail__dl">
                    <div class="p-works-detail__row">
                      <dt class="p-works-detail__dt">
                        担当範囲
                      </dt>
                      <dd class="p-works-detail__dd">
                        コーディング
                      </dd>
                    </div>
                    <div class="p-works-detail__row">
                      <dt class="p-works-detail__dt">
                        制作期間
                      </dt>
                      <dd class="p-works-detail__dd">
                        3週間 (2〜3h / day)
                      </dd>
                    </div>
                    <div class="p-works-detail__row">
                      <dt class="p-works-detail__dt">
                        使用言語
                      </dt>
                      <dd class="p-works-detail__dd">
                        HTML(EJS) / CSS(Scss) / JavaScript / PHP
                      </dd>
                    </div>
                    <div class="p-works-detail__row">
                      <dt class="p-works-detail__dt">
                        使用ツール
                      </dt>
                      <dd class="p-works-detail__dd">
                        Git / Gulp / vscode / XD
                      </dd>
                    </div>
                    <div class="p-works-detail__row">
                      <dt class="p-works-detail__dt">
                        使用CMS
                      </dt>
                      <dd class="p-works-detail__dd">
                        WordPress
                      </dd>
                    </div>
                    <div class="p-works-detail__row">
                      <dt class="p-works-detail__dt">
                        工夫点
                      </dt>
                      <dd class="p-works-detail__dd">
                        世界で活躍できるグローバルな人材を育てる、架空事業会社のコーポレートサイトのコーディング、WordPress化を行いました。
                      </dd>
                    </div>
                  </dl>
                </div>
              </div>
            </section>
            <!--/詳細-->

            <!--キャプチャ-->
            <div class="p-single-works__capture">
              <picture class="p-single-works__capture-picture">
                <source srcset="/img/webp/global-top.webp" class="p-single-works__capture-img" type="image/webp" />
                <img src="/img/common/global-top.jpeg" class="p-single-works__capture-img" alt="作品のタイトル" width="816" height="2128.88" decoding="async" loading="lazy">
              </picture>
              <picture class="p-single-works__capture-picture">
                <source srcset="/img/webp/global-about.webp" class="p-single-works__capture-img" type="image/webp" />
                <img src="/img/common/global-about.jpeg" class="p-single-works__capture-img" alt="作品のタイトル" width="816" height="1478.14" decoding="async" loading="lazy">
              </picture>

              <picture class="p-single-works__capture-picture">
                <source srcset="/img/webp/global-service.webp" class="p-single-works__capture-img" type="image/webp" />
                <img src="/img/common/global-service.jpeg" class="p-single-works__capture-img" alt="作品のタイトル" width="816" height="1998.94" decoding="async" loading="lazy">
              </picture>

              <picture class="p-single-works__capture-picture">
                <source srcset="/img/webp/global-case.webp" class="p-single-works__capture-img" type="image/webp" />
                <img src="/img/common/global-case.jpeg" class="p-single-works__capture-img" alt="作品のタイトル" width="816" height="1531.69" decoding="async" loading="lazy">
              </picture>
              <div class="p-single-works__capture-mask" id="js-capture"></div>
            </div>
            <!--/キャプチャ-->
          </div>
        </div>

        <div class="p-works-connect" style="transform: translate(0px, 0px);">
          <div class="p-works-connect__inner">
            <a href="/single-works/" class="p-works-connect__link">
              <span class="p-works-connect__link-head">
                Prev
              </span>
              <span class="p-works-connect__link-foot">
                Tach Blog
              </span>
            </a>
          </div>
